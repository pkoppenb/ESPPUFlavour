# Matt's mpl style file for the MPhil code

axes.labelsize : 18

xtick.labelsize : 15
ytick.labelsize : 15
xtick.top : True
ytick.right : True
xtick.minor.visible : True
ytick.minor.visible : True
xtick.direction: in
ytick.direction: in
xtick.major.size: 6
ytick.major.size: 6
xtick.minor.size: 3
ytick.minor.size: 3

font.size : 15

text.usetex : True

errorbar.capsize : 2

legend.fontsize : 15

figure.autolayout : True
